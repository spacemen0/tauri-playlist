{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "main-capability",
    "description": "Capability for the main window",
    "windows": [
        "main"
    ],
    "permissions": [
        "dialog:default",
        "opener:default",
        "core:path:default",
        "shell:default",
        "core:event:default",
        {
            "identifier": "opener:default",
            "allow": [
                {
                    "path": "$APPCONFIG/**"
                }
            ]
        }
    ]
}