{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "main-capability",
    "description": "Capability for the main window",
    "windows": [
        "main"
    ],
    "permissions": [
        "dialog:allow-open",
        "dialog:allow-save",
        "opener:default",
        "core:path:default",
        "shell:allow-open",
        {
            "identifier": "opener:default",
            "allow": [
                {
                    "path": "$APPCONFIG/**"
                }
            ]
        }
    ]
}